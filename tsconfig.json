{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "stripInternal": false,
    "rootDir": "src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*"
  ]
}