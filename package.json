{
  "name": "loopback-connector-sqlite3x",
  "version": "2.0.4",
  "description": "alternative LoopBack connector for SQLite3",
  "main": "./index.js",
  "types": "./index.d.ts",
  "tags": [
    "javascript",
    "typescript",
    "SQLite",
    "SQLite3",
    "ORM",
    "DAO",
    "schema",
    "database",
    "loopback",
    "loopback-next"
  ],
  "author": {
    "email": "www.gms@gmx.at",
    "name": "Guenter Sandner"
  },
  "license": "Artistic-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gms1/loopback-connector-sqlite3x.git"
  },
  "bugs": {
    "url": "https://github.com/gms1/loopback-connector-sqlite3x/issues"
  },
  "homepage": "https://github.com/gms1/loopback-connector-sqlite3x",
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "build/sh/tsrun prebuild.ts",
    "build": "tsc -p tsconfig.json",
    "rebuild": "npm run clean && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test:run": "mocha -t 40000 -r ts-node/register \"src/**/*.ts\"",
    "test:minimal": "npm run test:run -- --grep imported --invert",
    "test": "npm run rebuild && npm run test:run",
    "watch": "tsc -w -p tsconfig.json",
    "coverage:run": "nyc -e .ts -n \"src/**/*\" -x \"src/test/**/*\" mocha -t 40000 -r ts-node/register \"src/**/*.ts\"",
    "coverage:report": "nyc report --reporter=text-lcov",
    "coverage:html": "nyc report --reporter=html",
    "coverage:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "typedoc": "typedoc --options ./typedoc.json --tsconfig tsconfig.doc.json --out ./docs/typedoc/loopback-connector-sqlite3x --exclude \"src/test/**/*.*\" ./src/",
    "prepublishOnly": "echo \"ERROR: please use the dist-folder for publishing\" && exit 1",
    "release:build": "npm run clean && npm run build && npm run test:minimal && npm run lint && npm run _pubprep",
    "release:publish": "npm run typedoc && cd dist && npm --access public publish",
    "_pubprep": "build/sh/tsrun publish-prepare.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/test*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "debug": "^4.1.1",
    "loopback-connector": "^4.5.1",
    "loopback-datasource-juggler": "^4.5.3",
    "sqlite3orm": "^2.4.6",
    "strong-globalize": "^4.1.2"
  },
  "devDependencies": {
    "@loopback/repository": "^1.1.4",
    "@loopback/testlab": "^1.0.5",
    "@types/debug": "^4.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.21",
    "@types/rc": "^1.1.0",
    "@types/sinon": "^7.0.5",
    "@types/sqlite3": "^3.1.3",
    "coveralls": "^3.0.2",
    "install": "^0.12.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.2.0",
    "rimraf": "^2.6.3",
    "should": "^13.2.3",
    "sinon": "^7.2.3",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.1"
  },
  "typescript": {
    "definition": "./index.d.ts"
  }
}
