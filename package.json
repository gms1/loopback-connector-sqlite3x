{
  "name": "loopback-connector-sqlite3x",
  "version": "0.0.1",
  "description": "alternative LoopBack connector for SQLite3",
  "main": "./index.js",
  "types": "./index.d.ts",
  "tags": [
    "javascript",
    "typescript",
    "SQLite",
    "SQLite3",
    "ORM",
    "DAO",
    "schema",
    "database",
    "loopback",
    "loopback-next"
  ],
  "author": {
    "email": "www.gms@gmx.at",
    "name": "Guenter Sandner"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gms1/loopback-connector-sqlite3x.git"
  },
  "bugs": {
    "url": "https://github.com/gms1/loopback-connector-sqlite3x/issues"
  },
  "homepage": "https://github.com/gms1/loopback-connector-sqlite3x",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p tsconfig.json",
    "rebuild": "npm run clean && npm run build",
    "test:run": "mocha -t 10000 -r ts-node/register 'src/**/*.ts'",
    "test": "npm run build && npm run test:run",
    "watch": "tsc -w -p tsconfig.json",
    "coverage:run": "nyc -e .ts -n 'src/**/*' -x 'src/test/**/*' mocha -t 10000 -r ts-node/register 'src/**/*.ts'",
    "coverage:report": "nyc report --reporter=text-lcov",
    "coverage:html": "nyc report --reporter=html",
    "coverage:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "typedoc": "typedoc --options typedoc.json --out docs/typedoc/loopback-connector-sqlite3x --exclude 'test/**/*.*' src/",
    "prepublishOnly": "echo \"ERROR: please use the dist-folder for publishing\" && exit 1",
    "release:build": "npm run clean && npm run build && npm run test:run && npm run _pubprep",
    "release:publish": "npm run typedoc && cd dist && npm --access public publish",
    "_pubprep": "ts-node --project=build/ts/tsconfig.json --cache-directory=tmp/cache/ts-node build/ts/publish-prepare.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/test*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "debug": "^3.1.0",
    "loopback-connector": "^4.5.0",
    "sqlite3orm": "^1.0.0",
    "strong-globalize": "^4.1.0"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.3.5",
    "@types/rc": "^0.0.1",
    "@types/should": "^13.0.0",
    "@types/sinon": "^5.0.1",
    "@types/sqlite3": "^3.1.3",
    "coveralls": "^3.0.1",
    "istanbul": "^0.4.5",
    "loopback-datasource-juggler": "^3.22.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rc": "^1.2.8",
    "should": "^13.2.1",
    "sinon": "^6.1.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.0.0-dev.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  },
  "typescript": {
    "definition": "./index.d.ts"
  }
}
